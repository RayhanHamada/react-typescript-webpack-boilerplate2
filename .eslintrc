{
	"parser": "@typescript-eslint/parser",
	"extends": [
		"plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint"
	],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "no-use-before-define": "off"
    },
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
